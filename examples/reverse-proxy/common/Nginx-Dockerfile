FROM ubuntu:22.04


RUN apt-get update              \
 && apt-get install             \
    ca-certificates             \
    curl                        \
    gnupg2                      \
    lsb-release                 \
    nginx                       \
    nginx-extras                \
    ubuntu-keyring              \
    --no-install-recommends -y


ENTRYPOINT ["nginx"]
CMD ["-g", "daemon off;"]
